	username 	= avg-cs-student
[init]
	defaultBranch 	= master
[core]
	editor		= nvim
	pager		= less
[web]
	browser		= firefox
[color "branch"]
	current 	= yellow	bold
	local		= green 	bold
	remote 		= cyan 		bold
[color "diff"]
	meta		= yellow	bold
	frag		= magenta	bold
	old		    = red		bold
	new		    = green		bold
	whitespace	= red		reverse
[color "status"]
	added		= green		bold
	changed		= yellow	bold
	untracked	= red		bold
[alias]
	hist	= log --all --graph --decorate --oneline
    last    = log -1 HEAD
	co		= !git checkout $(git branch | fzf)
	c		= commit
	ca		= commit -a
	s		= status
	su		= status --untracked-files=no
	cb		= checkout -b
	bl		= branch -l
